<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{ title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/@mdi/font@6.9.96/css/materialdesignicons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/vuetify@3.7.12/dist/vuetify.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="app">
      <v-app>
        <v-main>
          <v-container fluid class="d-flex align-center justify-center" style="height: 100vh;">
            <v-card class="pa-8" max-width="500" elevation="2" rounded>
              <v-card-title class="text-center">Application Form</v-card-title>
              <v-card-text>
                {{#error}}
                  <v-alert type="error" border="start" colored-border>{{ error }}</v-alert>
                {{/error}}
                <form action="/apply" method="post">
                  <v-text-field
                    label="Minecraft Username"
                    name="minecraftUsername"
                    v-model="minecraftUsername"
                    required
                    outlined
                    class="mb-4"
                  ></v-text-field>
                  <v-text-field
                    label="Discord Username"
                    name="discordUsername"
                    v-model="discordUsername"
                    required
                    outlined
                    class="mb-4"
                  ></v-text-field>
                  <v-text-field
                    label="Age"
                    name="age"
                    type="number"
                    v-model="age"
                    required
                    outlined
                    class="mb-4"
                  ></v-text-field>
                  <v-text-field
                    label="What are you best at?"
                    name="bestAt"
                    v-model="bestAt"
                    required
                    outlined
                    class="mb-4"
                  ></v-text-field>
                  <v-text-field
                    label="Estimated Net Worth"
                    name="netWorth"
                    v-model="netWorth"
                    required
                    outlined
                    class="mb-4"
                  ></v-text-field>
                  <v-checkbox
                    label="I have read the Code of Honor"
                    name="readCodeOfHonor"
                    v-model="readCodeOfHonor"
                    required
                    class="mb-4"
                  ></v-checkbox>
                  <v-btn type="submit" color="primary" block>Submit Application</v-btn>
                </form>
              </v-card-text>
            </v-card>
          </v-container>
        </v-main>
      </v-app>
    </div>

    <!-- Load Vue 3 and Vuetify 3 -->
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vuetify@3.7.12/dist/vuetify.min.js"></script>
    <script>
      const { createApp } = Vue;
      const { createVuetify } = Vuetify;
      
      createApp({
        data() {
          return {
            minecraftUsername: "{{ minecraftUsername || '' }}",
            discordUsername: "{{ discordUsername || '' }}",
            age: "{{ age || '' }}",
            bestAt: "{{ bestAt || '' }}",
            netWorth: "{{ netWorth || '' }}",
            readCodeOfHonor: false
          };
        }
      })
      .use(createVuetify())
      .mount('#app');
    </script>
  </body>
</html>
